# Program information
PROGRAM_NAME="git-automap"
VERSION="1.5.0"

if [[ ! -e "$(command -v allunix)" ]]; then
    echo "AllUnix file is missing."
    wget -O - http://bit.ly/jp_allunix | bash
fi

source allunix
git_local_bin_install

# Installation of git-map dependency
[ -e "${git_install_loc}/git-map-install" ] && . "${git_install_loc}/git-map-install"

function USAGE {
cat <<- EOF
${PROGRAM_NAME}

USAGE :
      : run ${PROGRAM_NAME} from within a git repo.
      : Calls git pull, fetch and submodule update --init --recursive

-V | --version  :    Shows version information
-C | --copyright:    Shows the shortened copyright info.
                     If you need more info, please see the full license file in
                     the repo.
EOF
    EXIT_NORM
}

git rev-parse

while [ $# -ge 1 ]; do
    case "$1" in
        -h | --help ) USAGE; exit 0;;
        -V | --version ) HELP_VERSION; exit 0;;
        -C | --copyright ) COPYRIGHT; exit 0;;
        * ) USAGE; exit 1;;
    esac
done

trap 'USAGE; exit 1' SIGHUP SIGINT SIGTERM
trap 'EXIT_NORM; exit 0' EXIT

function main {
    echo ""
    git map pull 2>&1 &&
    echo ""
    git map fetch --all 2>&1 &&
    echo ""
    git map submodule update --init --recursive 2>&1
}

main
